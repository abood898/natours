block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset your password
            form.form
            .form__group
                label.form__label(for='email') Email address
                input#email.form__input(type='email', placeholder='you@example.com', required)
            .form__group.justify_center
                button.btn.btn--green#send_reset_token_btn Send reset token